        <script><![CDATA[function onAfter(current, previous) {
  /********************************************************************
LABOR COST
**********************************************************************/
var total_labor_cost = 0.00;

var gr = new GlideRecord('x_lahc_bldg_svc_wo_labor');
gr.addQuery('mwo', current.mwo);
gr.query();
while(gr.next()) {

	if(!gr.total_cost.nil()){
		total_labor_cost += parseFloat(gr.total_cost);
	}
}
gs.info("LABOR COST  >>> ("+current.mwo+") >>> "+total_labor_cost ,"CRMILLER");
var gr = new GlideRecord('x_lahc_bldg_svc_wo_table');
gr.addQuery('sys_id', current.mwo);
gr.query();
if(gr.next()) {
  var total = total_labor_cost;
   if (!gr.u_material.nil()) {
          total += parseFloat(gr.u_material);
}
  gr.u_labor = total_labor_cost.toFixed(2);
  gr.u_total = total.toFixed(2);

  gr.update();
}

   
}]]></script>
